{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Reported Cyber Incidents by Threat Type (2013-2023)",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/celineoww/FIT3179_A2/refs/heads/main/data/ReportedIncidentsStats2013-2023.csv"
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2023,  
      "bind": {
        "input": "range",
        "min": 2013,
        "max": 2023,
        "step": 1,
        "name": "Year Selection Range: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year <= selectedYear"
    }
  ],
  "layer": [
    {
      "mark": "area",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelAngle": 0}
        },
        "y": {
          "field": "Total",
          "type": "quantitative",
          "stack": "zero",
          "title": "Total Incidents"
        },
        "color": {
          "field": "Threat",
          "type": "nominal",
          "title": "Threat Type",
          "scale": {
            "scheme": "tableau10"
          }
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Threat", "type": "nominal", "title": "Threat Type"},
          {"field": "Total", "type": "quantitative", "title": "Total Incidents"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "black",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Total",
          "type": "quantitative",
          "stack": "zero"
        },
        "color": {
          "field": "Threat",
          "type": "nominal"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -5,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "black"
      },
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"aggregate": "sum", "field": "Total", "type": "quantitative"},
        "text": {"aggregate": "sum", "field": "Total", "type": "quantitative"}
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}
