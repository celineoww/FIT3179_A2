{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "title": "Top 15 Most Used Social Media Platforms (Monthly Active Users vs. Monthly Organic Traffic)",
  "data": {
    "url": "https://raw.githubusercontent.com/celineoww/FIT3179_A2/refs/heads/main/data/SocialMediaPlatform.csv"
  },
  "params": [
    {
      "name": "socmed_collection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Baidu",
          "Douyin",
          "Facebook",
          "Instagram",
          "Messenger",
          "Qzone",
          "Snapchat",
          "Spotify",
          "Telegram",
          "TikTok",
          "Viber",
          "WeChat",
          "WhatsApp",
          "X (Twitter)",
          "YouTube"
        ],
        "labels": [
          "Show All",
          "Baidu",
          "Douyin",
          "Facebook",
          "Instagram",
          "Messenger",
          "Qzone",
          "Snapchat",
          "Spotify",
          "Telegram",
          "TikTok",
          "Viber",
          "WeChat",
          "WhatsApp",
          "X (Twitter)",
          "YouTube"
        ],
        "name": "Social Media Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Ranking <= 15"
    },
    {
      "calculate": "datum['Monthly Active Users (million)'] * -1",
      "as": "Monthly Active Users (million)"
    },
    {
      "fold": ["Monthly Active Users (million)", "Monthly Organic Traffic (million)"],
      "as": ["Metric", "Value"]
    },
    {
      "filter": "socmed_collection == null || datum['Social Media Network'] == socmed_collection"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "cornerRadius": 10
      },
      "encoding": {
        "x": {
          "field": "Value",
          "type": "quantitative",
          "axis": {
            "title": "Values (millions)"
          },
          "scale": {
            "domain": [-3000, 12000]
          }
        },
        "y": {
          "field": "Social Media Network",
          "type": "ordinal",
          "sort": {
            "field": "Value",
            "order": "descending"
          },
          "axis": {
            "title": "Social Media Platform"
          }
        },
        "color": {
          "field": "Metric",
          "type": "nominal",
          "scale": {
            "domain": ["Monthly Active Users (million)", "Monthly Organic Traffic (million)"],
            "range": ["#F1B900", "#030081"]
          }
        },
        "tooltip": [
          {"field": "Social Media Network", "type": "nominal", "title": "Platform"},
          {"field": "Metric", "type": "nominal", "title": "Metric"},
          {"field": "Value", "type": "quantitative", "title": "Values (millions)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "dy": -5,
        "dx": 20
      },
      "transform": [
        {
          "filter": {
            "field": "Social Media Network",
            "equal": "Facebook"
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "domain": [-3000, 10000]
          }
        },
        "y": {
          "field": "Social Media Network",
          "type": "ordinal"
        },
        "text": {
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "dy": -5,
        "dx": 20
      },
      "transform": [
        {
          "filter": {
            "field": "Social Media Network",
            "equal": "YouTube"
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "domain": [-3000, 10000]
          }
        },
        "y": {
          "field": "Social Media Network",
          "type": "ordinal"
        },
        "text": {
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "dy": -5,
        "dx": 20
      },
      "transform": [
        {
          "filter": {
            "field": "Social Media Network",
            "equal": "Instagram"
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "domain": [-3000, 10000]
          }
        },
        "y": {
          "field": "Social Media Network",
          "type": "ordinal"
        },
        "text": {
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "dy": -5,
        "dx": 20
      },
      "transform": [
        {
          "filter": {
            "field": "Social Media Network",
            "equal": "WhatsApp"
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "domain": [-3000, 10000]
          }
        },
        "y": {
          "field": "Social Media Network",
          "type": "ordinal"
        },
        "text": {
          "field": "Value",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "dy": -5,
        "dx": 20
      },
      "transform": [
        {
          "filter": {
            "field": "Social Media Network",
            "equal": "TikTok"
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "domain": [-3000, 10000]
          }
        },
        "y": {
          "field": "Social Media Network",
          "type": "ordinal"
        },
        "text": {
          "field": "Value",
